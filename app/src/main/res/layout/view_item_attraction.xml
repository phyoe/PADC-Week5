<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small"
    android:background="@color/color_primary_light_two"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:orientation="vertical"
        android:padding="@dimen/margin_medium">

        <TextView
            android:id="@+id/tv_attraction_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/tmp_title"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/text_black_full" />

        <ImageView
            android:id="@+id/iv_stock_photo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/stock_photo_placeholder" />

        <TextView
            android:id="@+id/tv_attraction_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="4"
            android:text="@string/tmp_body"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/text_black_full" />

    </LinearLayout>

</android.support.v7.widget.CardView>